# Set vim as a default editor
export VISUAL=nvim
export EDITOR="$VISUAL"

if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then exec startx; fi

alias config='/usr/bin/git --git-dir=/home/larry/.cfg/ --work-tree=/home/larry'
alias vim='nvim'

if [[ -z "$TMUX" ]]; then
    if tmux has-session 2>/dev/null; then
        exec tmux attach
    else
        exec tmux
    fi
fi
